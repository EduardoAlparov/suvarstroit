                                            <label class="sorting__checkbox-label" for="projects-checkbox-sorting-UP-2">
                                                <i></i>
                                                <span class="sorting__checkbox-text">
                                                    2 очередь
                                                </span>
                                            </label>
                                        </li>
                                    </ul>
                                </li>
                                <li class="sorting__item sorting__item--line">
                                    <input type="checkbox" class="visually-hidden sorting__checkbox" hidden
                                        name="projects-checkbox-sorting" id="projects-checkbox-sorting-SS">

                                    <label class="sorting__checkbox-label" for="projects-checkbox-sorting-SS">
                                        <i></i>
                                        <span class="sorting__checkbox-text">
                                            Станция Спортивная
                                        </span>
                                    </label>

                                    <ul class="sorting__sublist">
                                        <li class="sorting__sublist-item">
                                            <input type="checkbox" class="visually-hidden sorting__checkbox" hidden
                                                name="projects-checkbox-sorting" id="projects-checkbox-sorting-SS-1">
                                            <label class="sorting__checkbox-label" for="projects-checkbox-sorting-SS-1">
                                                <i></i>
                                                <span class="sorting__checkbox-text">
                                                    1 очередь
                                                </span>
                                            </label>
                                        </li>
                                        <li class="sorting__sublist-item">
                                            <input type="checkbox" class="visually-hidden sorting__checkbox" hidden
                                                name="projects-checkbox-sorting" id="projects-checkbox-sorting-SS-2">
                                            <label class="sorting__checkbox-label" for="projects-checkbox-sorting-SS-2">
                                                <i></i>
                                                <span class="sorting__checkbox-text">
                                                    2 очередь
                                                </span>
                                            </label>
                                        </li>
                                        <li class="sorting__sublist-item">
                                            <input type="checkbox" class="visually-hidden sorting__checkbox" hidden
                                                name="projects-checkbox-sorting" id="projects-checkbox-sorting-SS-3">
                                            <label class="sorting__checkbox-label" for="projects-checkbox-sorting-SS-3">
                                                <i></i>
                                                <span class="sorting__checkbox-text">
                                                    3 очередь
                                                </span>
                                            </label>
                                        </li>
                                    </ul>
                                </li>
                                <li class="sorting__item sorting__item--line">
                                    <input type="checkbox" class="visually-hidden sorting__checkbox" hidden
                                        name="projects-checkbox-sorting" id="projects-checkbox-sorting-VG">

                                    <label class="sorting__checkbox-label" for="projects-checkbox-sorting-VG">
                                        <i></i>
                                        <span class="sorting__checkbox-text">
                                            Времена года
                                        </span>
                                    </label>

                                    <ul class="sorting__sublist">
                                        <li class="sorting__sublist-item">
                                            <input type="checkbox" class="visually-hidden sorting__checkbox" hidden
                                                name="projects-checkbox-sorting" id="projects-checkbox-sorting-VG-1">
                                            <label class="sorting__checkbox-label" for="projects-checkbox-sorting-VG-1">
                                                <i></i>
                                                <span class="sorting__checkbox-text">
                                                    1 очередь
                                                </span>
                                            </label>
                                        </li>
                                    </ul>
                                </li>
                                <li class="sorting__item sorting__item--line">
                                    <input type="checkbox" class="visually-hidden sorting__checkbox" hidden
                                        name="projects-checkbox-sorting" id="projects-checkbox-sorting-Otr">

                                    <label class="sorting__checkbox-label" for="projects-checkbox-sorting-Otr">
                                        <i></i>
                                        <span class="sorting__checkbox-text">
                                            Отражение
                                        </span>
                                    </label>

                                    <ul class="sorting__sublist">
                                        <li class="sorting__sublist-item">
                                            <input type="checkbox" class="visually-hidden sorting__checkbox" hidden
                                                name="projects-checkbox-sorting" id="projects-checkbox-sorting-Otr-1">
                                            <label class="sorting__checkbox-label"
                                                for="projects-checkbox-sorting-Otr-1">
                                                <i></i>
                                                <span class="sorting__checkbox-text">
                                                    1 очередь
                                                </span>
                                            </label>
                                        </li>
                                    </ul>
                                </li>
                                <li class="sorting__item sorting__item--line">
                                    <input type="checkbox" class="visually-hidden sorting__checkbox" hidden
                                        name="projects-checkbox-sorting" id="projects-checkbox-sorting-Stol">

                                    <label class="sorting__checkbox-label" for="projects-checkbox-sorting-Stol">
                                        <i></i>
                                        <span class="sorting__checkbox-text">
                                            Столичный
                                        </span>
                                    </label>

                                    <ul class="sorting__sublist">
                                        <li class="sorting__sublist-item">
                                            <input type="checkbox" class="visually-hidden sorting__checkbox" hidden
                                                name="projects-checkbox-sorting" id="projects-checkbox-sorting-Stol-1">
                                            <label class="sorting__checkbox-label"
                                                for="projects-checkbox-sorting-Stol-1">
                                                <i></i>
                                                <span class="sorting__checkbox-text">
                                                    1 очередь
                                                </span>
                                            </label>
                                        </li>
                                    </ul>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="list-filters__item list-filters__item--buttons">
                    <p class="list-filters__label">
                        Количество комнат
                    </p>
                    <div class="list-filters__radios">
                        <div class="radios">
                            <div class="radios__items">
                                <label class="radios__item radios__item--wider">
                                    <input type="checkbox" name="rooms" value="studios" class="radios__item-input">
                                    <span class="radios__item-text">
                                        Студия
                                    </span>
                                </label>
                                <label class="radios__item">
                                    <input type="checkbox" name="rooms" value="1" class="radios__item-input">
                                    <span class="radios__item-text">
                                        1
                                    </span>
                                </label>
                                <label class="radios__item">
                                    <input type="checkbox" name="rooms" value="2" class="radios__item-input">
                                    <span class="radios__item-text">
                                        2
                                    </span>
                                </label>
                                <label class="radios__item">
                                    <input type="checkbox" name="rooms" value="3" class="radios__item-input">
                                    <span class="radios__item-text">
                                        3
                                    </span>
                                </label>
                                <label class="radios__item">
                                    <input type="checkbox" name="rooms" value="4" class="radios__item-input">
                                    <span class="radios__item-text">
                                        4+
                                    </span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="list-filters__item list-filters__item--range">
                    <p class="list-filters__label">
                        Стоимость, руб.
                    </p>

                    <div class="range-slider js-range-slider-double" data-min="1200000" data-max="20000000"
                        data-step="100000">
                        <div class="range-slider__inputs">
                            <div class="range-slider__input-wrapper">
                                <span class="range-slider__input-pretext">
                                    от
                                </span>
                                <input type="tel" class="range-slider__input js-numeric-input-decimals">
                            </div>

                            <div class="range-slider__inputs-divider"></div>

                            <div class="range-slider__input-wrapper">
                                <span class="range-slider__input-pretext">
                                    до
                                </span>
                                <input type="tel" class="range-slider__input js-numeric-input-decimals">
                            </div>
                        </div>

                        <div class="range-slider__element"></div>
                    </div>
                </div>
                <div class="list-filters__item list-filters__item--range">
                    <p class="list-filters__label">
                        Площадь, м
                    </p>

                    <div class="range-slider js-range-slider-double" data-min="20" data-max="400" data-step="1">
                        <div class="range-slider__inputs">
                            <div class="range-slider__input-wrapper range-slider__input-wrapper--small">
                                <span class="range-slider__input-pretext">
                                    от
                                </span>
                                <input type="tel" class="range-slider__input js-numeric-input">
                            </div>

                            <div class="range-slider__inputs-divider"></div>
                            <div class="range-slider__input-wrapper range-slider__input-wrapper--small">
                                <span class="range-slider__input-pretext">
                                    до
                                </span>
                                <input type="tel" class="range-slider__input js-numeric-input">
                            </div>
                        </div>

                        <div class="range-slider__element"></div>
                    </div>
                </div>
                <div class="list-filters__item list-filters__item--dropdown">
                    <p class="list-filters__label">
                        Срок сдачи проекта
                    </p>
                    <div class="list-filters__sorting list-filters__sorting--projects sorting sorting--grey js-sorting">
                        <button class="sorting__current" type="button">
                            <span class="sorting__current-text">
                                Любой
                            </span>
                        </button>
                        <div class="sorting__dropdown">
                            <ul class="sorting__list sorting__list--padding sorting__list--date">
                                <li class="sorting__item sorting__item--line">
                                    <button type="button" class="sorting__reset sorting__reset--reverse">
                                        <svg class="sorting__reset-icon">
                                            <use xlink:href="#reset"></use>
                                        </svg>
                                        <span class="sorting__reset-text">
                                            Любой
                                        </span>
                                    </button>
                                </li>
                                <li class="sorting__item sorting__item--line">
                                    <input type="checkbox" class="visually-hidden sorting__checkbox" hidden
                                        name="projects-checkbox-sorting" id="projects-checkbox-sorting-done">

                                    <label class="sorting__checkbox-label sorting__checkbox-label--reverse"
                                        for="projects-checkbox-sorting-done">
                                        <i></i>
                                        <span class="sorting__checkbox-text">
                                            Сдан
                                        </span>
                                    </label>
                                </li>
                                <li class="sorting__item sorting__item--line">
                                    <input type="checkbox" class="visually-hidden sorting__checkbox" hidden
                                        name="projects-checkbox-sorting" id="projects-checkbox-sorting-2-2024">

                                    <label class="sorting__checkbox-label sorting__checkbox-label--reverse"
                                        for="projects-checkbox-sorting-2-2024">
                                        <i></i>
                                        <span class="sorting__checkbox-text">
                                            II кв. 2024
                                        </span>
                                    </label>
                                </li>
                                <li class="sorting__item sorting__item--line">
                                    <input type="checkbox" class="visually-hidden sorting__checkbox" hidden
                                        name="projects-checkbox-sorting" id="projects-checkbox-sorting-3-2024">

                                    <label class="sorting__checkbox-label sorting__checkbox-label--reverse"
                                        for="projects-checkbox-sorting-3-2024">
                                        <i></i>
                                        <span class="sorting__checkbox-text">
                                            III кв. 2024
                                        </span>
                                    </label>
                                </li>
                                <li class="sorting__item sorting__item--line">
                                    <input type="checkbox" class="visually-hidden sorting__checkbox" hidden
                                        name="projects-checkbox-sorting" id="projects-checkbox-sorting-1-2025">

                                    <label class="sorting__checkbox-label sorting__checkbox-label--reverse"
                                        for="projects-checkbox-sorting-1-2025">
                                        <i></i>
                                        <span class="sorting__checkbox-text">
                                            I кв. 2025
                                        </span>
                                    </label>
                                </li>
                                <li class="sorting__item sorting__item--line">
                                    <input type="checkbox" class="visually-hidden sorting__checkbox" hidden
                                        name="projects-checkbox-sorting" id="projects-checkbox-sorting-3-2025">

                                    <label class="sorting__checkbox-label sorting__checkbox-label--reverse"
                                        for="projects-checkbox-sorting-3-2025">
                                        <i></i>
                                        <span class="sorting__checkbox-text">
                                            III кв. 2025
                                        </span>
                                    </label>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="list-filters__footer-box">
                <button type="button" class="list-filters__open-filters">
                    Все фильтры
                </button>
                <p class="list-filters__finded-objects">
                    Найдено 356 квартир
                </p>
                <div class="list-filters__reset-filters">
                    <input type="reset" value="Сбросить фильтры">
                    <i></i>
                </div>
            </div>
        </form>
    </div>
</section>

<section class="list-section section section--grey section--round-border js-animation-trigger">
    <div class="list-section__site-container">
        <form action="" class="list-section__navs">
            <div class="list-section__sorting sorting hide-on-mobile js-sorting">
                <button class="sorting__current" type="button">
                    <svg class="sorting__current-icon">
                        <use xlink:href="#sorting"></use>
                    </svg>
                    <span class="sorting__current-text">
                        Сначала дешевые
                    </span>
                </button>
                <div class="sorting__dropdown">
                    <ul class="sorting__list">
                        <li class="sorting__item">
                            <label class="sorting__label" for="radio-sort-popular">
                                <input type="radio" class="visually-hidden" checked="checked" name="sorting-select"
                                    id="radio-sort-popular"><span class="sorting__text">Сначала дешевые</span><span
                                    class="sorting__icon"></span>
                            </label>
                        </li>
                        <li class="sorting__item">
                            <label class="sorting__label" for="radio-sort-new">
                                <input type="radio" class="visually-hidden" name="sorting-select"
                                    id="radio-sort-new"><span class="sorting__text">Новые</span><span
                                    class="sorting__icon"></span>
                            </label>
                        </li>
                        <li class="sorting__item">
                            <label class="sorting__label" for="radio-sort-alpbt-up">
                                <input type="radio" class="visually-hidden" name="sorting-select"
                                    id="radio-sort-alpbt-up"><span class="sorting__text">По алфавиту (от А до
                                    Я)</span><span class="sorting__icon"></span>
                            </label>
                        </li>
                        <li class="sorting__item">
                            <label class="sorting__label" for="radio-sort-alpbt-down">
                                <input type="radio" class="visually-hidden" name="sorting-select"
                                    id="radio-sort-alpbt-down"><span class="sorting__text ">По алфавиту (от Я до
                                    А)</span><span class="sorting__icon"></span>
                            </label>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="list-section__grouping grouping hide-on-mobile">
                <p class="grouping__text">
                    Сгруппировать похожие планировки
                </p>
                <label class="grouping__label">
                    <input type="checkbox" class="visually-hidden" name="grouping-elements" id="grouping-elements-id">
                    <span class="grouping__switcher"></span>
                </label>
            </div>

            <div class="list-section__switching switching hide-on-mobile">
                <button data-view="tile" type="button" class="switching__btn switching__btn--active js-switching-btn">
                    <svg class="icon icon-tile">
                        <use xlink:href="#tile"></use>
                    </svg>
                </button>
                <button data-view="list" type="button" class="switching__btn js-switching-btn">
                    <svg class="icon icon-list">
                        <use xlink:href="#list"></use>
                    </svg>
                </button>
            </div>

            <button type="button" class="list-section__mobile-btn list-section__mobile-switching"></button>
            <button type="button" class="list-section__mobile-btn list-section__mobile-open-filter">
                <span>Фильтр</span>
                <i></i>
            </button>
            <button type="button" class="list-section__mobile-btn list-section__mobile-sorting"></button>
        </form>

        <ul class="list-section__catalog list-section__catalog--tiles">
            <li class="list-section__catalog-item">
                {{>searched-card cardId=001}}
            </li>
            <li class="list-section__catalog-item">
                {{>searched-card cardId=002 cardClass=true}}
            </li>
            <li class="list-section__catalog-item list-section__catalog-item--full">
                <div class="list-section__promo promo">
                    <div class="promo__logo">
                        <svg class="icon">
                            <use xlink:href="#logo-w"></use>
                        </svg>
                    </div>
                    <div class="promo__center">
                        <div class="promo__heading">
                            <p class="promo__title">
                                Скидки до 5% на&nbsp;недвижимость
                            </p>
                            <p class="promo__subtitle">
                                Акция действует до 20 февраля 2024
                            </p>
                        </div>

                        <div class="promo__image">

                        </div>
                    </div>
                    <a href="#" class="promo__link">
                        Подробнее
                    </a>
                </div>
            </li>
        </ul>

        <a href="#" class="list-section__add-link">
            Показать еще&nbsp;<span class="list-section__add-link-plus">20</span>&nbsp;из&nbsp;<span
                class="list-section__add-link-total">356</span>&nbsp;квартир
        </a>
    </div>

    <div class="list-section__fixed-footer">
        <div class="list-section__site-container">
            <button type="button" class="list-section__fixed-btn">
                <svg class="icon">
                    <use xlink:href="#filter"></use>
                </svg>

                <span class="hide-on-mobile">Показать фильтры</span>
                <span class="show-on-mobile">Фильтры</span>
            </button>

            <button type="button" class="list-section__top-btn hide-on-mobile">
                <svg class="icon">
                    <use xlink:href="#top"></use>
                </svg>
            </button>
        </div>
    </div>
</section>

{{/content}}
{{/extend}}
