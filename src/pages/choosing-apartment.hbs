{{#extend "layout"}}
{{#content "main"}}

<section class="simple-section section section--first js-animation-trigger">
    <div class="simple-section__site-container">
        <div class="simple-section__heading">
            <h2 class="simple-section__title simple-section__title--h3-text">
                Выбор квартиры
            </h2>
        </div>

        <div class="simple-section__tabs">
            <a href="#" class="simple-section__tab simple-section__tab--active js-search-tab">
