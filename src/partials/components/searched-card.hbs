                    <ul class="project-card__swiper-wrapper swiper-wrapper">
                        <li class="project-card__swiper-slide swiper-slide image-block">
                            <picture>
                                <source type="image/webp" srcset="./img/searched-card/img-2.webp" alt="Alt" />
                                <img class="lazy" src="./img/searched-card/img-2.png" alt="Alt" />
                            </picture>
                        </li>
                        <li class="project-card__swiper-slide swiper-slide image-block">
                            <picture>
                                <source type="image/webp" srcset="./img/searched-card/img-3.webp" alt="Alt" />
                                <img class="lazy" src="./img/searched-card/img-3.png" alt="Alt" />
                            </picture>
                        </li>
                    </ul>

                    <div class="swiper-pagination"></div>
                </div>

                <div class="project-card__transparent-thumbs">
                    <div class="transparent-thumbs swiper">
                        <ul class="transparent-thumbs__swiper-wrapper swiper-wrapper">

                        </ul>
                    </div>
                </div>
            </div>
            <div class="searched-card__info">
                <p class="searched-card__title">
                    <span class="searched-card__name-value">3 – комнатная</span> <span
                        class="searched-card__area-value">75,5 м2</span>
                </p>

                <ul class="searched-card__list">
                    <li>
                        <span class="searched-card__key">
                            Проект
                        </span>
                        <p class="searched-card__value searched-card__station-value">
                            Станция Спортивная
                        </p>
                    </li>
                    <li>
                        <span class="searched-card__key">
                            Расположение
                        </span>
                        <p class="searched-card__value searched-card__location-value">
                            2 очередь, Секция 5
                        </p>
                    </li>
                    <li>
                        <span class="searched-card__key">
                            Этаж
                        </span>
                        <p class="searched-card__value searched-card__stage-value">
                            5 / 10
                        </p>
                    </li>
                    <li>
                        <span class="searched-card__key">
                            Срок сдачи
                        </span>
                        <p class="searched-card__value searched-card__deadline-value">
                            2 квартал 2025
                        </p>
                    </li>
                </ul>
            </div>
        </div>

        <div class="searched-card__footer">
            <div class="searched-card__prices">
                <p class="searched-card__current-price">
                    5 190 000 ₽
                </p>
                <p class="searched-card__old-price">
                    5,6 млн ₽
                </p>
            </div>
        </div>
    </div>

    <div class="searched-card__variant searched-card__variant--row">
        <div class="searched-card__single-image">
            <picture>
                <source type="image/webp" srcset="./img/searched-card/img-3.webp" alt="Alt" />
                <img class="lazy" src="./img/searched-card/img-3.png" alt="Alt" />
            </picture>
        </div>

        <div class="searched-card__main">
            <div class="searched-card__center">
                <div class="searched-card__col">
                    <div class="searched-card__top">
                        <p class="searched-card__title">
                            <span class="searched-card__name-value">3 – комнатная</span> <span
                                class="searched-card__area-value show-on-mobile">75,5 м2</span>
                        </p>

                        <ul class="searched-card__simple-list">
                            <li class="searched-card__simple-item">
                                <span class="searched-card__area-value">
