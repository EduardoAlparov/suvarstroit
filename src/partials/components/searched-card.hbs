    <div class="searched-card__variant searched-card__variant--tile">
        <div class="searched-card__header">
            <div class="searched-card__tabs">
                <div class="searched-card__tab tab tab--light-blue tab--small">
                    <span class="tab__text">
                        Комфорт класс
                    </span>
                </div>
                <div class="searched-card__dropdown-wrapper">
                    <label
                        class="searched-card__dropdown-button tab tab--small tab--outlined tab--square js-card-dropdown-button">
                        <span class="tab__text">
                            +2
                        </span>
                    </label>

                    <ul class="searched-card__dropdown">
                        <li class="searched-card__dropdown-item">
                            <div class="searched-card__tab tab tab--small tab--white">
                                <span class="tab__text">
                                    Улучшенная отделка
                                </span>
                            </div>
                        </li>
                        <li class="searched-card__dropdown-item">
                            <div class="searched-card__tab tab tab--small tab--white">
                                <span class="tab__text">
                                    Паркинг
                                </span>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="searched-card__body">
            <div class="searched-card__images js-card-swiper-wrapper">
